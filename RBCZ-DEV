cliente=7000

print("Olá, bem-vindo ao Banco RBF")

def rbcz ():  
    opcao=input('digite qual operação você deseja utilizar? saque,depósito ou extrato?.' )
    if opcao == 'saque':
        saque()
    elif opcao == 'depósito':
       deposito()
    elif opcao == 'extrato':
        extrato()
    else:
        print('Não tem esta operação.')

def saque():
    a2=int(input('digite um valor para sacar : '))
    b2=a2-cliente
    if a2 <= cliente:
        print('saque bem sucedido')
    else:
        print('gostaria de um empréstimo?, pois você não tem esse saldo na conta')
    
    
    
def deposito():
    c2=float(input('digite o valor para depositar: '))
    print(c2+cliente)
    print('deposito bem sucedido')
    
def extrato():






