class Banco_Zurich:
  def __init__(self):
      self.saldo = 0

  def deposito(self):
      c2 = float(input('Digite o valor para depositar: '))
      self.saldo += c2
      print(f"Depósito de R${c2} reais realizado com sucesso.")

  def saque(self):
      a2 = int(input('Digite um valor para sacar: '))
      self.saldo -= a2
      if a2 <= self.saldo:
          print(f"Saque de R${a2} reais realizado com sucesso.")
      else:
          print('Gostaria de um empréstimo? Pois você não tem esse saldo na conta, durooo.')

  def extrato(self):
      print(f"Saldo atual: R${self.saldo} reais")

minha_conta = Banco_Zurich()
opcao = input('Digite qual operação você deseja utilizar? Saque, depósito ou extrato? ')
if opcao == 'saque':
  minha_conta.saque()
elif opcao == 'depósito':
  minha_conta.deposito()
elif opcao == "extrato":
  minha_conta.extrato()
else:
  print('Não há esta operação.')






import tkinter as tk

def soma():
    n1=float(input_entry.get())
    n2=float(input_entry.get())
    resultado1 = n1+n2
    resultado['text']=f'Resultado da soma = {resultado1}'    


root= tk.Tk()
root.geometry=('500x500')

label1= tk.Label(root,text='Isso é um texto',fg='red',bg='white',font='arial',width='50')
label1.pack()

label_n1=tk.Label(root,text='Digite um número')
label_n1.pack()
input_entry= tk.Entry(root,width=10)
input_entry.place(width=50,pady=10)

label_n1=tk.Label(root,text='Digite um número')
label_n1.pack()
input_entryn2= tk.Entry(root,width=10)
input_entryn2.place(width=50,pady=10)



btn=tk.Button(root,text='clique aqui',fg='red',bg='white',width=10,height=2,command=soma)
btn.pack(pady=20)

resultado= tk.label(root,text='',font='Arial',bg='yellow',fg='black')
resultado.pack()

root.mainloop()
